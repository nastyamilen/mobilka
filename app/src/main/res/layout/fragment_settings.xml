<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сложность игры"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/difficultyRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/easyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Легкий (90 секунд)"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/mediumRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Средний (60 секунд)"
                android:checked="true"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/hardRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сложный (30 секунд)"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Размер игрового поля"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/gridSizeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/smallGridRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Маленькое (6x6)"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/mediumGridRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Среднее (8x8)"
                android:checked="true"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/largeGridRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Большое (10x10)"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Звуковые эффекты"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/soundEffectsSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Включить звуковые эффекты"
            android:checked="true"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <Switch
            android:id="@+id/musicSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Включить фоновую музыку"
            android:checked="true"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/saveSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить настройки"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/resetSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сбросить настройки"/>

    </LinearLayout>
</ScrollView>
